<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <EditText
            android:id="@+id/User_Title"
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/eventName"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/addEvent"
            android:ems="10"
            android:inputType="text"
            android:text="Event Name" />

        <Button
            android:id="@+id/addEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_column="2"
            android:layout_marginBottom="75dp"
            android:layout_row="29"
            android:text="Add Event" />

        <EditText
            android:id="@+id/eventName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/eventStartTime"
            android:layout_column="0"
            android:layout_marginBottom="49dp"
            android:layout_row="3"
            android:layout_toEndOf="@+id/User_Title"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="enter event name" />

        <EditText
            android:id="@+id/eventStartTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/eventEndTime"
            android:layout_alignStart="@+id/eventEndTime"
            android:layout_column="0"
            android:layout_marginBottom="71dp"
            android:layout_row="3"
            android:ems="10" />

        <EditText
            android:id="@+id/eventDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/addEvent"
            android:layout_alignStart="@+id/eventEndTime"
            android:layout_column="0"
            android:layout_marginBottom="22dp"
            android:layout_row="3"
            android:ems="10"
            android:inputType="number" />

        <EditText
            android:id="@+id/eventEndTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/eventDate"
            android:layout_centerHorizontal="true"
            android:layout_column="0"
            android:layout_marginBottom="15dp"
            android:layout_row="4"
            android:ems="10" />
    </GridLayout>

</RelativeLayout>
